<Page
    x:Class="GamePassScores.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamePassScores.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:GamePassScores.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled">

    <Grid>
        <Grid.Background>
            <AcrylicBrush BackgroundSource="HostBackdrop" TintOpacity="0.8" TintLuminosityOpacity="0.8" TintColor="Black" FallbackColor="#107C10"></AcrylicBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <muxc:TeachingTip x:Name="AboutTip"
                            Target="{x:Bind AboutButton}"
                            Title="About me and the App"
                            Subtitle="It's easier than ever to see control samples in both light and dark theme!"
                          IsOpen="False">
            <muxc:TeachingTip.Content>
                <TextBlock TextWrapping="WrapWholeWords" Margin="0,16,0,0">The app is open sourced on <Hyperlink NavigateUri="https://github.com/XeonKHJ/GamePassScores">GitHub</Hyperlink>.</TextBlock>
            </muxc:TeachingTip.Content>

        </muxc:TeachingTip>
        <TextBlock Padding="30, 30, 30, 10" Grid.Row="0" Text="GamePass Scores" Style="{StaticResource HeaderTextBlockStyle}"></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <TextBox x:Name="SearchBox" Margin="10" VerticalAlignment="Bottom" Width="150" TextChanged="SearchBox_TextChanged"></TextBox>
            <CommandBar HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Transparent" Margin="10" IsOpen="False">
                <AppBarButton Icon="Filter" Label="筛选">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="OrderByScoreAscendItem" Text="By Metascore In Ascending Order" Click="OrderByScoreAscendItem_Click"></MenuFlyoutItem>
                        <MenuFlyoutItem x:Name="OrderByScoreDescendItem" Text="By Metascore In Descending Order" Click="OrderByScoreDescendItem_Click"></MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="OrderByNameAscendItem" Text="By Title In Ascending Order" Click="OrderByNameAscendItem_Click"></MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="OrderByNameDescendItem" Text="By Title In Descending Order" Click="OrderByNameDescendItem_Click"></MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton x:Name="AboutButton" Icon="Account" Label="关于" Click="AboutButton_Click"></AppBarButton>
        </CommandBar>
        </StackPanel>
        <controls:AdaptiveGridView Name="GamesView" Padding="20, 0" Margin="0, 10" Grid.Row="1" ItemsSource="{x:Bind GamesViewModel}" ItemHeight="441" DesiredWidth="275" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                                   animations:ReorderGridAnimation.Duration="300" IsItemClickEnabled="True" ItemClick="GamesView_ItemClick" CacheMode="BitmapCache">
            <controls:AdaptiveGridView.ItemTemplate>
                <DataTemplate x:DataType="models:Game">
                    <RelativePanel Margin="10" MaxWidth="275">
                        <muxc:ProgressRing HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" Visibility="{Binding IsImageLoaded}" IsActive="True"></muxc:ProgressRing>
                        <Viewbox Grid.Row="0" Stretch="UniformToFill" StretchDirection="Both" Height="412.5">
                            <Image x:Name="PosterImage" Source="{Binding PosterUrl}" Tag="{Binding ID}" ImageOpened="PosterImage_ImageOpened"></Image>
                        </Viewbox>

                        <Grid RelativePanel.AlignBottomWithPanel="True"  RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Height="125">
                            <Grid.Background>
                                <AcrylicBrush TintColor="Black" TintOpacity="0.5"></AcrylicBrush>
                            </Grid.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Title}" Margin="10" Style="{StaticResource TitleTextBlockStyle}" Foreground="White"></TextBlock>
                                <Grid Grid.Column="1" Visibility="{Binding IsScoreAvaliable}">
                                    <Grid.Background>
                                        <SolidColorBrush Opacity="0.5" Color="{Binding ScoreColor}"></SolidColorBrush>
                                    </Grid.Background>
                                    <TextBlock Text="{Binding Metascore}" Margin="10" HorizontalTextAlignment="Center" TextAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Foreground="White" Padding="0"></TextBlock>
                                </Grid>
                            </Grid>
                        </Grid>
                    </RelativePanel>
                </DataTemplate>
            </controls:AdaptiveGridView.ItemTemplate>
        </controls:AdaptiveGridView>
    </Grid>
</Page>
